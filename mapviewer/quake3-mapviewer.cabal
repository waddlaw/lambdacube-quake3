cabal-version: 2.4
name:          quake3-mapviewer
version:       0.1.0.0
synopsis:      quake 3 map viewer application
homepage:      lambdacube3d.com
license:       BSD-3-Clause
author:        Csaba Hruska
maintainer:    csaba.hruska@gmail.com
category:      Game
build-type:    Simple

executable q3mapviewer
  main-is:          Main.hs
  other-modules:
    Camera
    Content
    Engine
    Entity
    ItemsMV

  default-language: Haskell2010
  build-depends:
    , base
    , binary
