    , containers
    , deepseq
    , directory
    , elerea
    , filepath
    , GLFW-b
    , JuicyPixels
    , lambdacube-gl
    , lambdacube-quake3-engine
    , OpenGLRaw
    , pretty-show
    , proteaaudio               ^>=0.7.0.1
    , unordered-containers
    , vect                      ^>=0.4.7
    , vector
